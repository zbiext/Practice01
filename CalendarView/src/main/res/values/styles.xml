<resources>

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light" />
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CalendarViewTitle" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CalendarView" />

    <style name="CalendarView.MonthTitle">
        <item name="android:textSize">@dimen/textsize_16dp__</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CalendarView.DayOfTheWeek">
        <item name="android:textSize">@dimen/textsize_16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalendarView.DayOfTheMonth">
        <item name="android:textSize">@dimen/textsize_16dp__</item>
        <item name="android:minHeight">@dimen/minDayCellHeight</item>
    </style>

</resources>
